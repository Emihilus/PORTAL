{% for auction in auctions %}

	<a href="{{path('auction-details',{'auctionId': auction.id})}}" class="list-group-item list-group-item-dark list-group-item-action"><img src="{% if auction.images|length > 0 %}{{asset('upload/'~auction.images[0].filename)}}{% endif %}" width="50">
		{{auction.title}}
		| kończy się
		<b>
			{{ auction.endsAt|date('Y-m-d h:m') }}</b>
	</a>
{% endfor %}
