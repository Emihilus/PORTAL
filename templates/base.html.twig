			<script>
			$(document).ready(function()
			{

				var down = false;

				$('#bell').click(function(e)
				{

					var color = $(this).text();
					if(down)
					{
						$('#box').css('display', 'none');
						$('#box').css('z-index', 0);
						$('#box').css('height','0px');
						$('#box').css('opacity','0');
						down = false;
					}
					else
					{
						markNotificationsAsRead();
						$('#box').css('display', 'block');
						$('#box').css('z-index', 100);
						$('#box').css('height','auto');
						$('#box').css('opacity','0.95');
						down = true;
					}

				});
			getNotifications();
			});

			function getNotifications()
			{
				$.ajax({
					url: "{{path ('get-notifications-ur') }}",
					method: "post", 
					dataType: "html"})
				.done(res => 
				{ 
					console.log(res);
					$("#box").html(res);
					if($("#urnC").val() != 0)
						$("#notifCount").html($("#urnC").val());
				});
			}

			function markNotificationsAsRead()
			{
				$.ajax({
					url: "{{path ('mar-notifications') }}",
					method: "post", 
					dataType: "html"})
				.done(res => 
				{ 
					console.log(res);
				});
			}

			$( "#filterz" ).submit(function( event ) 
			{
				submitFilters();
				event.preventDefault();
			});

			</script>

