    {% endif %}

    <hr>
{% endfor %}

<pre>
    {{ dump(users) }}
</pre>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script>
function toggleVerification(username, action)
{
        fetch("{{path('toggleVerification')}}", 
        {
            method: 'POST',
            body: JSON.stringify(
                {
                    action,
                    username
                })
        })
        .then((response) => 
        {
            response.json().then(function(json)
            {
                if(json.result == 'Success')
                {
                    if(action)
                    {
                        $("#vs-"+username).html('no');
                        $("#vs-"+username).toggleClass('text-succes');
                        $("#vs-"+username).toggleClass('text-danger');
                        $("#li-"+username).
                    }
                    else
                    {
                        $("#vs-"+username).html('yes');
                        $("#vs-"+username).toggleClass('text-succes');
                        $("#vs-"+username).toggleClass('text-danger');
                    }
                }

            });
        })
        .catch(() => { /* Error. Inform the user */ })
}
</script>
{% endblock %}