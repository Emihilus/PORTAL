{% extends 'base.html.twig' %}

{% block title %}Log in{{parent()}}
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
				{% if error.messageKey =="You have been banned." %}<br><img src="{{asset('/interface/permabanned.gif')}}">
				{% endif %}
			</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Logowanie</h1>
		<label for="inputUsername">Login</label>
		<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
		<label for="inputPassword">Hasło</label>
		<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<input
		type="hidden" name="referer" value="{{ referer }}">

		{#
		        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
		        See https://symfony.com/doc/current/security/remember_me.html#}

		<div class="checkbox mb-3">
			<label>
				<input type="checkbox" name="_remember_me">
				Zapamiętaj mnie
			</label>
		</div>


		<button class="btn btn-lg btn-primary me-3" type="submit">
			Zaloguj
		</button><a href="{{ path('app_forgot_password_request') }} "><button class="btn btn-lg btn-primary" type="button">Zapomniałem hasła</button></a>

		<p>Username: Emis<br>Pwd: 12345</p>
		</a><a href="{{ path('app_register') }} "><button class="mb-3 me-3 btn btn-lg btn-primary" type="button">Rejestracja</button></a>
	</form>
{% endblock %}
